    <li><%= link_to order_path(current_user.orders.pending.first) do %>
        <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i>
      <% end %>
    </li>
    <% end %>

    <li><%= link_to "Log out", logout_path, method: "delete" %></li>
<% else %>
