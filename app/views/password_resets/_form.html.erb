<div class="form-horizontal">
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>
  <%= render partial: 'shared/form_errors', locals: {obj: @user} %>
  <fieldset>
    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4">
        <%= f.hidden_field :token, class: "form-control", value: params[:token] %>
      </div>
    </div>
    <div class="actions col-lg-offset-2">
      <%= f.submit "Submit", class: "btn-submit" %>
    </div>
  </fieldset>
  <% end %>
</div>
