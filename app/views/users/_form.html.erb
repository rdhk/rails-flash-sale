<div class="form-horizontal">
  <%= form_for(@user) do |f| %>
  <%= render partial: 'shared/form_errors', locals: {obj: @user} %>
  <fieldset>
    <legend>Sign up</legend>
    <div class="form-group">
      <%= f.label :first_name, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= f.password_field :password_confirmation, class: "form-control"%>
      </div>
    </div>
    <div class="actions col-lg-offset-2">
      <%= f.submit "Sign Up" %>
    </div>
  </fieldset>
  <% end %>
</div>
