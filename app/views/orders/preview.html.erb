<h4> Your Shipping Address </h4>
<%= render partial: 'orders/address', object: @order.address %>
<%= render partial: 'orders/order_preview', locals:{order: @order} %>
<%= form_tag charge_order_path(@order) do %>
<article>
  <% if flash[:error].present? %>
  <div id="error_explanation">
    <p><%= flash[:error] %></p>
  </div>
<% end %>
<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
data-email="<%= current_user.email %>"
data-description="A month's subscription"
data-amount=<%= @order.total_amount * 100 %>
data-currency="inr"
data-locale="auto"></script>
<% end %>
