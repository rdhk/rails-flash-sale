<% if @orders.blank? %>
  <div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Sorry, you dont have any orders to display.</strong>
</div>
<% else %>
  <h1>My Orders</h1>
  <table class= "table table-striped table-bordered">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Placed At</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= number_to_currency order.total_amount, unit: "â‚¹" %></td>
        <td><%= order_status_label(order) %></td>
        <td><%= order.placed_at.to_formatted_s(:long) if order.placed_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

