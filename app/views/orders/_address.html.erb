<div class="col-xs-12 col-md-3 col-lg-3">
    <div class="panel panel-default height">
        <div class="panel-heading">#<%= address_counter + 1 %></div>
        <div class="panel-body">
            <strong><%= address.house_no %></strong><br>
            <%= address.street %><br>
            <%= address.city %><br>
            <strong><%= address.pincode %></strong><br>
            <%= radio_button("user", "address", address.id, checked: (address.id == @recent_address_id)) %>
        </div>
    </div>
</div>
