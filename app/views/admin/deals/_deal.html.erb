<div class="panel panel-primary col-lg-10">
  <div class="panel-heading">
    <h3 class="panel-title"><%= deal.title %></h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
      <ul>
        <% if deal.images.present? %>
        <table class="table table-bordered">
          <tr>
            <% deal.images.each do |pic| %>
              <td><%= link_to image_tag(pic.file.url(:thumb), class: "img-responsive"), pic.file.url, target: "_blank" %></td>
            <% end %>
          </tr>
        </table>
        <% end %>
      </ul>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Title</h4>
        <p class="list-group-item-text"><%= deal.title%></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Description</h4>
        <p class="list-group-item-text"><%= deal.description%></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Price</h4>
        <p class="list-group-item-text"><%= deal.price%></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Discounted Price</h4>
        <p class="list-group-item-text"><%= deal.discounted_price%></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Quantity</h4>
        <p class="list-group-item-text"><%= deal.quantity%></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Publish Date</h4>
        <p class="list-group-item-text"><%= deal.publish_date.to_date.to_formatted_s(:long) if deal.publish_date %></p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Publishable</h4>
        <p class="list-group-item-text"><%= deal.publishable ? raw('<span class="label label-success"><i class="fa fa-check" aria-hidden="true"></i></span>') : raw('<span class="label label-danger"><i class="fa fa-remove" aria-hidden="true"></i></span>') %> </p>
      </a>
    </div>
<!--     Title: <%= deal.title %> <br>
    Description: <%= deal.description %> <br>
    Price: <%= deal.price %> <br>
    Discounted Price: <%= deal.discounted_price %> <br>
    Quantity: <%= deal.quantity %> <br>
    Publish Date: <%= deal.publish_date.to_date.to_formatted_s(:long) if deal.publish_date %> -->
  </div>
</div>
