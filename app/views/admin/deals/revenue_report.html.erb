<h1>Listing Deals</h1>
<table class= "table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price(Rs)</th>
      <th>Discounted Price(Rs)</th>
      <th>Quantity Sold</th>
      <th>Quantity</th>
      <th>Publish Date</th>
      <th>Revenue Generated</th>
    </tr>
  </thead>
  <tbody>
    <% @deals.each do |deal| %>
    <tr>
      <td><%= deal.title %></td>
      <td><%= deal.price %></td>
      <td><%= deal.discounted_price %></td>
      <td><%= deal.quantity_sold %></td>
      <td><%= deal.quantity %></td>
      <td><%= deal.publish_date.to_date.to_formatted_s(:long) if deal.publish_date.present?%></td>
      <td><%= number_to_currency deal.revenue, unit: "â‚¹" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
